{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "start": "npm run build && node ./dist/index.js",
    "start:dev": "nodemon ./server/index.js --exec babel-node",
    "build": "npm run clean && babel ./server -d dist",
    "pretest": "npm run build",
    "test": "cross-env NODE_ENV=test nyc mocha dist/tests/**/index.spec.js --timeout 80000 --exit",
    "test:dev": "npm run build && mocha dist/tests/**/index.spec.js --timeout 80000 --exit",
    "clean": "rm -rf dist",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint '**/*js'",
    "lint:fix": "prettier-eslint '**/*{js,json}' --write && prettier-eslint server/tests/**/*.js --write",
    "heroku-postbuild": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "exclude": [
      "dist/models/index.js",
      "dist/tests/index.spec.js"
    ]
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "mailgen": "^2.0.7",
    "methods": "^1.1.2",
    "morgan": "^1.9.1",
    "passport": "^0.3.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^1.0.0",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.87.0",
    "sequelize": "^4.42.0",
    "slug": "^0.9.3",
    "underscore": "^1.9.1",
    "uniqid": "^5.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "prettier-cli": "^0.1.0",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "sqlite3": "^4.0.6",
    "uniqid": "^5.0.3",
    "uuid4": "^1.1.4"
  }
}
